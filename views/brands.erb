<h1>Brands</h1>
<hr>
<% if @brands.any? %>
  <ul>
    <% @brands.each() do |brand| %>
      <li><a href="/brands/<%= brand.id %>"><%= brand.name %></a></li>
      <% if brand.price %>
        $ <%= brand.price %>
      <% end %>
      <br>
    <% end %>
  </ul>
<% else %>
  <p>There are no brands</p>
<% end %>
